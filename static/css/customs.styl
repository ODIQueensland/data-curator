#customs
  margin-bottom 10px
  .custom
    margin-right 0
    padding-right 0
    padding-left 0
    margin-bottom 5px
    display flex-row
    width 100%
    .inputs-container
      display inline-block
      margin 20px 5px 20px 0px
      width 70%
      .input-group
        width 100%
        input
          width 100%
          padding-left 10px !important
        .input-group-addon
          width 30%
          text-align left
    .custom-types
      display inline-block
      margin 0px 0px 0px 0px
      width 18%
    button
      display inline-block
      height 100% !important
      min-height 100% !important
      margin 20px 0px 20px 5px
      padding 5px 8px 5px 8px
      float right
  .button-container
    width 100%
    overflow hidden
    display block
    button.add-custom
      display block
      float right
