#sources
  margin-bottom 10px
  .source
    margin-right 0
    padding-right 0
    padding-left 0
    margin-bottom 5px
    display block
    .inputs-container
      display inline-block
      width 100%
      float left
      .input-group
        width 90%
        input
          width 100%
          padding-left 10px !important
        .input-group-addon
          width 20%
          text-align left
    button
      height 100% !important
      min-height 100% !important
      margin 30px 0px 30px 5px
      padding 5px 8px 5px 8px
      float right
  .button-container
    width 100%
    overflow hidden
    display block
    button.add-source
      display block
      float right
