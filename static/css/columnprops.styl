dangerColor = #ff3860

#columnProperties
  label
    display block
    width 100%
  div#format-container
    display inline-block
    width 100%
    select
    input
      display inline-block
      width 100%
    &.format-pattern
      select
        width 30%
      input
        width 70%
  div#constraints
    display block
    margin-top 15px
    padding-right 0
    padding-top 5px
    div
      display block
      width 100%
      text-align left
      label
      input
        display inline-block
        width auto
        border-left 0
        &.constraint-text
          float right
          width 70%
  #description
    width 100%
  .input-group.extra-types
    width 100%
    display inline-block
    label.inline
      display inline
      width 30%
      padding-left 25px !important
      font-weight 400
    input
      width 70%
div.radioContainer
  display flex
  flex-direction row
  justify-content left
  span
    padding-right 20px
    label.inline
      display inline
      padding-left 25px !important
      font-weight 400
    input
      display inline
